use warnings;
use strict;

use EBox;
use EBox::Config::Redis;
use EBox::Sudo;
use Error qw(:try);

my $dir = '/ebox';
my $pattern = $ARGV[0];

unless ($pattern) {
    print STDERR "Usage: $0 pattern [path]\n";
    exit 1;
}
if ($ARGV[1]) {
    $dir = $ARGV[1];
}

EBox::init();

my $redis = new EBox::Config::Redis();

my @keys = $redis->_redis_call('keys', "$dir/*");

foreach my $key (@keys) {
    my $value = $redis->get($key);
    if (($key =~ /$pattern/) or ($value =~ /$pattern/)) {
        print "$key: $value\n";
    }
}
