<?xml version="1.0" encoding="UTF-8"?>
<scenario>
    <name>eBox SMTP test scenario</name>
    <desc>foo bar</desc>

    <host>
        <name>ebox-server</name>
        <desc>eBox server</desc>
        <baseimage>{$dist}-ebox-base</baseimage>
        <network>
            <interface type="static">
                <name>eth1</name>
                <address>192.168.2.1</address>
                <netmask>255.255.255.0</netmask>
            </interface>
            <interface type="static">
                <name>eth2</name>
                <address>192.168.3.1</address>
                <netmask>255.255.255.0</netmask>
                <gateway>10.6.7.1</gateway>
            </interface>
        </network>

        <packages>
            <package>mpack</package>
        </packages>

        <post-install>
            <script>ebox-import-network.sh</script>
            <script>ebox-wait-start.sh</script>
        </post-install>
    </host>

    <host>
        <name>test-client</name>
        <desc>simple client host</desc>
        <baseimage>jaunty-mini</baseimage>
        <memory>64</memory>
        <network>
         <interface type="static">
            <name>eth1</name>
            <address>192.168.2.5</address>
            <netmask>255.255.255.0</netmask>
            <gateway>10.6.7.1</gateway>
         </interface>
        </network>

    	<packages>
            <package>libmail-pop3client-perl</package>
            <package>libmail-imapclient-perl</package>
            <package>libio-socket-ssl-perl</package>
            <package>libnet-smtp-ssl-perl</package>
            <package>libnet-smtpauth-perl</package>
        </packages>
    </host>

    <host>
        <name>ebox-smtp</name>
        <desc>eBox SMTP</desc>
        <baseimage>{$dist}-ebox-base</baseimage>
        <network>
            <interface type="static">
                <name>eth1</name>
                <address>192.168.2.100</address>
                <netmask>255.255.255.0</netmask>
            </interface>
        </network>

        <post-install>
            <script>ebox-import-network.sh</script>
            <script>ebox-wait-start.sh</script>
        </post-install>
    </host>
</scenario>
