#!/usr/bin/perl


my $TO     = $ENV{TO};
my $FROM   = $ENV{FROM};
my $TEXT   = $ENV{TEXT};
my $SSL    = $ENV{SSL};
my $SERVER = $ENV{SERVER};
my $AUTH_USER   = $ENV{AUTH_USER};
my $AUTH_PASSWD = $ENV{AUTH_PASSWD};

my $cmd = "sendEmail -f $FROM -t $TO -u '$TEXT' -m '$TEXT' -s $SERVER ";
$cmd .= ' -o tls=yes' if $SSL;
if ($AUTH_USER) {
    $cmd .=  " -xu $AUTH_USER -xp $AUTH_PASSWD";
}

sleep 100; # XXX assure the serve is ain good state. move to the test usite
           # itself?

my @output = `$cmd`;

my $success = grep {
    m/Email was sent successfully/
} @output;

if (not $success) {
    die "@output";
}

print "@output";


1;


