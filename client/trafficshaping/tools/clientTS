# Script to test traffic shaping module
# Usage: clientTS

SERVER_ADDR=192.168.45.74
PORT=2100
PROTOCOL=UDP
BIND_HOST=192.168.45.114

readonly SERVER_ADDR PORT PROTOCOL

iperf --client $SERVER_ADDR --port=$PORT --format=k \
      --bind=$BIND_HOST --time=60 --interval=1 --bandwidth=100k > \
      shaper-traffic &

iperf --client $SERVER_ADDR --port=$(($PORT + 1)) --format=k \
      --bind=$BIND_HOST --time=60 --interval=1 --bandwidth=400k > \
     other-traffic &




